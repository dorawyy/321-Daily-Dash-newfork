{
    "plugins": ["jest"],        // eslint-plugin-jest 
    "env": {
        "browser": true,        
        "commonjs": true,
        "es2021": true,
        "jest": true    // ESLint recognizes Jest testing framework
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-labels": 2,
        "no-unused-vars": 2,
        "no-useless-catch": 2,
        "semi": 2,
        "quotes": 2
    }
}
